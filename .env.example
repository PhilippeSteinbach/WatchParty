# =============================================================================
# WatchParty â€“ Environment Variables
# Copy this file to .env and fill in the values before starting the application.
# =============================================================================

# --- Required ---

# JWT signing secret (minimum 32 bytes / 256 bits).
# Generate with: openssl rand -base64 64
JWT_SECRET=

# --- Database (3-container setup only, not needed for standalone) ---

DB_HOST=localhost
DB_PORT=5432
DB_NAME=watchparty
DB_USERNAME=watchparty
DB_PASSWORD=watchparty

# --- Optional ---

# YouTube Data API v3 key for video search/suggestions.
# Leave empty to disable YouTube integration.
YOUTUBE_API_KEY=

# Comma-separated list of allowed CORS origins.
# For production, set this to your actual domain(s).
# Example: https://watchparty.example.com
CORS_ALLOWED_ORIGINS=http://localhost:*

# Server port (default: 8080)
SERVER_PORT=8080

# JWT token lifetimes (milliseconds)
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=604800000

# Spring profiles (comma-separated)
# Options: dev, standalone, local
SPRING_PROFILES_ACTIVE=dev
